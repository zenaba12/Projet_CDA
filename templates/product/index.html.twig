{% extends 'base.html.twig' %}

{% block title %}Gestion des Produits{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>üì¶ Liste des Produits</h1>
    <a href="{{ path('product_new') }}" class="btn btn-success mb-3">‚ûï Ajouter un Produit</a>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nom</th>
                <th>Prix</th>
                <th>Description</th>
                <th>Cat√©gorie</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.nom }}</td>
                    <td>{{ product.prix }}‚Ç¨</td>
                    <td>{{ product.description|length > 50 ? product.description|slice(0, 50) ~ '...' : product.description }}</td>
                    <td>{{ product.category.nom }}</td>
                    <td>
                        <img src="{{ asset('uploads/images/' ~ product.image) }}" class="img-thumbnail" width="100" alt="{{ product.nom }}">
                    </td>
                    <td>
                        <a href="{{ path('product_edit', { id: product.id }) }}" class="btn btn-warning btn-sm">‚úè Modifier</a>
                        <form action="{{ path('product_delete', { id: product.id }) }}" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm">üóë Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
    <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary">üîô Retour au Tableau de Bord</a>
        </tbody>
    </table>
</div>
{% endblock %}

           
        