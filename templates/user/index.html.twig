{% extends 'admin_base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Liste des utilisateurs</h1>
 <a href="{{ path('user_create') }}" class="btn btn-warning btn-sm">Ajouter</a>
        {% if is_granted('ROLE_ADMIN') %}
            <table class="table table-striped mt-3">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Date de naissance</th>
                        <th>Email</th>
                        <th>Rôles</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.nom }}</td>
                            <td>{{ user.prenom }}</td>
                            <td>{{ user.dateDeNaissance|date('d/m/Y') }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.roles|join(', ') }}</td>
                            <td>
                                <!-- Boutons Modifier et Supprimer accessibles uniquement aux admins -->
                                <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                                <a href="{{ path('user_delete', {'id': user.id}) }}" class="btn btn-danger btn-sm" 
                                   onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
                                   Supprimer
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7">Aucun utilisateur trouvé.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p style="color: red;">Accès refusé. Vous devez être administrateur pour voir cette page.</p>
            <a href="{{ path('app_login') }}">Se connecter</a>
        {% endif %}
    </div>
{% endblock %}
