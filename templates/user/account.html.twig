{% extends 'admin_base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
    <h1 class="mb-4">Mon compte</h1>

    <div class="row">
        <!-- Colonne gauche : Informations utilisateur -->
        <div class="col-md-6">
            <h2>Mes informations</h2>

            {{ form_start(form) }}
                {{ form_row(form.email) }}
                {{ form_row(form.nom) }}
                {{ form_row(form.prenom) }}
               <button type="submit" class="btn btn-primary">Enregistrer</button>

            {{ form_end(form) }}
        </div>

        <!-- Colonne droite : Liste des commandes -->
        <div class="col-md-6">
            <h2>Mes commandes</h2>
            
            {% if orders is empty %}
                <p>Aucune commande pass√©e.</p>
            {% else %}
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Date</th>
                            <th>Statut</th>
                            <th>Total</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for order in orders %}
                            <tr>
                                <td>#{{ order.id }}</td>
                                <td>{{ order.date|date('d/m/Y') }}</td>
                                <td>
                                    {% if order.status == 'pending' %}
                                        <span class="badge bg-warning">En attente</span>
                                    {% elseif order.status == 'shipped' %}
                                        <span class="badge bg-primary">Exp√©di√©e</span>
                                    {% elseif order.status == 'delivered' %}
                                        <span class="badge bg-success">Livr√©e</span>
                                    {% else %}
                                        <span class="badge bg-secondary">Inconnu</span>
                                    {% endif %}
                                </td>
                                <td>{{ order.getTotalPrice()|number_format(2, ',', ' ') }} ‚Ç¨</td>
                                <td>
                                    <a href="{{ path('order_view', { id: order.id }) }}" class="btn btn-info btn-sm">üëÅ Voir</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
{% endblock %}
