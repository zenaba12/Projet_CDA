{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Inscription</h1>

    {{ form_start(registrationForm) }}
    
    <div class="mb-3">
        {{ form_label(registrationForm.nom, 'Nom') }}
        {{ form_widget(registrationForm.nom, { 'attr': {'class': 'form-control'} }) }}
    </div>

    <div class="mb-3">
        {{ form_label(registrationForm.prenom, 'Pr√©nom') }}
        {{ form_widget(registrationForm.prenom, { 'attr': {'class': 'form-control'} }) }}
    </div>

    <div class="mb-3">
        {{ form_label(registrationForm.date_de_naissance, 'Date de naissance') }}
        {{ form_widget(registrationForm.date_de_naissance, { 'attr': {'class': 'form-control', 'type': 'date'} }) }}
    </div>

    <div class="mb-3">
        {{ form_label(registrationForm.email, 'Email') }}
        {{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control'} }) }}
    </div>

    <div class="mb-3">
        {{ form_label(registrationForm.Password, 'Mot de passe') }}
        {{ form_widget(registrationForm.Password, { 'attr': {'class': 'form-control'} }) }}
    </div>

    <div class="form-check mb-3">
        {{ form_widget(registrationForm.agreeTerms, { 'attr': {'class': 'form-check-input'} }) }}
        {{ form_label(registrationForm.agreeTerms, 'J\'accepte les conditions', { 'attr': {'class': 'form-check-label'} }) }}
    </div>

    <button type="submit" class="btn btn-primary">S'inscrire</button>
    
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
