            {{ message }}
        </div>
    {% endfor %}

    <!-- Bouton Ajouter une cat√©gorie -->
    <a href="{{ path('category_new') }}" class="btn btn-success mb-3">‚ûï Ajouter une cat√©gorie</a>

    {% if categories is empty %}
        <p>Aucune cat√©gorie disponible.</p>
    {% else %}
        <ul class="list-group">
            {% for category in categories %}
