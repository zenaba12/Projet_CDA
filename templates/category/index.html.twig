{% extends 'base.html.twig' %}

{% block title %}Catalogue{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>üõç Catalogue des Produits</h1>

    {% if categories is empty %}
        <p>Aucune cat√©gorie disponible.</p>
    {% else %}
        <div class="row">
            {% for category in categories %}
                <div class="col-md-12 mt-3">
                    <h2 class="text-primary">{{ category.nom }}</h2>
                </div>

                {% for product in category.products %}
                    <div class="col-md-3">
                        <div class="card">
                            <img src="{{ asset('uploads/images/' ~ product.image) }}" class="card-img-top" alt="{{ product.nom }}">
                            <div class="card-body text-center">
                                <h5 class="card-title">{{ product.nom }}</h5>
                                <p class="fw-bold">{{ product.prix }}‚Ç¨</p>
                                <a href="{{ path('product_show', { id: product.id }) }}" class="btn btn-primary">Voir Produit</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
