{% block title %}{{ category.nom }}{% endblock %}

{% block body %}
<div class="container my-5">
    <h2 class="text-center">üõç Produits de la cat√©gorie {{ category.nom }}</h2>
    <div class="row">
        {% for product in products %}
            <div class="col-md-4 my-3">
                <div class="card">
                    <img src="{{ asset('images/' ~ product.image) }}" class="card-img-top" alt="{{ product.nom }}">
                    <div class="card-body text-center">
                        <h5 class="card-title">{{ product.nom }}</h5>
                        <p class="card-text">{{ product.description }}</p>
