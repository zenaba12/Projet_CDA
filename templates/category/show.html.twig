                        <a href="{{ path('product_show', { id: product.id }) }}" class="btn btn-primary">Voir le Produit</a>
                    </div>
                </div>
            </div>
        {% else %}
            <p class="text-center">Aucun produit disponible dans cette cat√©gorie.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}
