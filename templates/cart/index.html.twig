{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h1 class="my-4 text-center">üõí Votre Panier</h1>

    <!-- üîπ Affichage des messages flash -->
    {% for label, messages in app.flashes %}
        <div class="alert alert-{{ label }}">
            {% for message in messages %}
                {{ message }}
            {% endfor %}
        </div>
    {% endfor %}

    {% if cart and cart.cartItems|length > 0 %}
        <table class="table">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Prix</th>
                    <th>Quantit√©</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for item in cart.cartItems %}
                    <tr>
                        <td>{{ item.product.nom }}</td>
                        <td>{{ item.product.prix }} ‚Ç¨</td>
                        <td>
                            <form action="{{ path('cart_update', { id: item.id }) }}" method="post">
                                {{ form_widget(forms[item.id].quantity) }}
                                <button type="submit" class="btn btn-primary">üîÑ Mettre √† jour</button>
                            </form>
                        </td>
                        <td>{{ item.product.prix * item.quantity }} ‚Ç¨</td>
                        <td>
                            <a href="{{ path('cart_remove', { id: item.id }) }}" class="btn btn-danger">‚ùå Retirer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <!-- üîπ Boutons pour commander et continuer les achats -->
        <div class="d-flex justify-content-between mt-4">
            <div>
                <a href="{{ path('category_index') }}" class="btn btn-secondary">‚¨ÖÔ∏è Continuer les achats</a>
            </div>
            <div>
                <a href="{{ path('cart_checkout') }}" class="btn btn-success">‚úÖ Commander</a>
            </div>
        </div>

    {% else %}
        <p class="text-center">Votre panier est vide.</p>
        <div class="text-center mt-3">
            <a href="{{ path('app_home') }}" class="btn btn-primary">‚¨ÖÔ∏è Retour √† la boutique</a>
        </div>
    {% endif %}
</div>
{% endblock %}
