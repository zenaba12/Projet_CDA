{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h1 class="my-4 text-center">üõí Votre Panier</h1>

    <!-- üîπ Affichage des messages flash -->
    {% for label, messages in app.flashes %}
        <div class="alert alert-{{ label }}">
            {% for message in messages %}
                {{ message }}
            {% endfor %}
        </div>
    {% endfor %}

    {% if cart and cart.cartItems|length > 0 %}
        <table class="table">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Prix Unitaire</th>
                    <th>Quantit√©</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for item in cart.cartItems %}
                    <tr>
                        <td>{{ item.product.nom }}</td>
                        <td>{{ item.product.prix }} ‚Ç¨</td>
                        <td>
                            <input type="number" 
                                   class="form-control quantity-input" 
                                   data-id="{{ item.id }}" 
                                   value="{{ item.quantity }}" 
                                   min="1">
                        </td>
                        <td class="product-price" data-price="{{ item.product.prix }}" data-id="{{ item.id }}">
    {{ item.product.prix * item.quantity }} ‚Ç¨
</td>

                        <td>
                            <a href="{{ path('cart_remove', { id: item.id }) }}" class="btn btn-delete">‚ùå Retirer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <h3 class="text-end mt-4">Total : <span id="cart-total">{{ total }} ‚Ç¨</span></h3>

        <div class="d-flex justify-content-between mt-4">
            <div>
                <a href="{{ path('category_index') }}" class="btn btn-secondary">‚¨ÖÔ∏è Continuer les achats</a>
            </div>
            <div>
                <a href="{{ path('cart_checkout') }}" class="btn btn-success">‚úÖ Commander</a>
            </div>
        </div>
    {% else %}
        <p class="text-center">Votre panier est vide.</p>
        <div class="text-center mt-3">
            <a href="{{ path('app_home') }}" class="btn btn-primary">‚¨ÖÔ∏è Retour √† la boutique</a>
        </div>
    {% endif %}
</div>
{% endblock %}

{% block javascripts %}
<script>
document.addEventListener("DOMContentLoaded", function() {
    document.querySelectorAll(".quantity-input").forEach(input => {
        input.addEventListener("change", function() {
            let itemId = this.dataset.id;
            let newQuantity = this.value;

            if (newQuantity < 1) {
                alert("La quantit√© ne peut pas √™tre inf√©rieure √† 1.");
                this.value = 1;
                return;
            }

            fetch(`/cart/update/${itemId}`, {
                method: "POST",
                headers: {
                    "Content-Type": "application/x-www-form-urlencoded"
                },
                body: `quantity=${newQuantity}`
            }).then(response => response.text())
              .then(() => {
                  let productPriceElement = document.querySelector(`[data-id='${itemId}']`);
                  let unitPrice = parseFloat(productPriceElement.dataset.price);
                  let newTotal = (unitPrice * newQuantity).toFixed(2) + " ‚Ç¨";
                  productPriceElement.textContent = newTotal;

                  let cartTotal = 0;
                  document.querySelectorAll(".product-price").forEach(priceElem => {
                      cartTotal += parseFloat(priceElem.textContent);
                  });
                  document.getElementById("cart-total").textContent = cartTotal.toFixed(2) + " ‚Ç¨";
              });
        });
    });
});
</script>
{% endblock %}
