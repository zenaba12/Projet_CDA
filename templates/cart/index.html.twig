{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h1 class="my-4 text-center">üõí Votre Panier</h1>

    <!-- üîπ Affichage des messages flash -->
    {% for label, messages in app.flashes %}
        <div class="alert alert-{{ label }}">
            {% for message in messages %}
                {{ message }}
            {% endfor %}
        </div>
    {% endfor %}

    {% if cart and cart.cartItems|length > 0 %}
        <table class="table">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Prix</th>
                    <th>Quantit√©</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for item in cart.cartItems %}
                    <tr>
                        <td>{{ item.product.nom }}</td>
                        <td>{{ item.product.prix }} ‚Ç¨</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.product.prix * item.quantity }} ‚Ç¨</td>
                        <td>
                            <a href="{{ path('cart_remove', { id: item.id }) }}" class="btn btn-danger">‚ùå Retirer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p class="text-center">Votre panier est vide.</p>
    {% endif %}
</div>
{% endblock %}
