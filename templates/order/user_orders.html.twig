{% extends 'base.html.twig' %}

{% block body %}
<h1>üì¶ Mes Commandes</h1>

{% if orders is empty %}
    <p>Vous n'avez encore pass√© aucune commande.</p>
{% else %}
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Date</th>
                <th>Statut</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for order in orders %}
                <tr>
                    <td>#{{ order.id }}</td>
                    <td>{{ order.date|date('d/m/Y') }}</td>
                    <td>
                        {% if order.status == 'pending' %}
                            <span class="badge bg-warning">En attente</span>
                        {% elseif order.status == 'shipped' %}
                            <span class="badge bg-primary">Exp√©di√©e</span>
                        {% elseif order.status == 'delivered' %}
                            <span class="badge bg-success">Livr√©e</span>
                        {% else %}
                            <span class="badge bg-secondary">Inconnu</span>
                        {% endif %}
                    </td>
                    <td>{{ order.getTotalPrice()|number_format(2, ',', ' ') }} ‚Ç¨</td>
                    <td>
                        <a href="{{ path('order_view', { id: order.id }) }}" class="btn btn-info">üëÅ Voir</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endif %}
{% endblock %}
